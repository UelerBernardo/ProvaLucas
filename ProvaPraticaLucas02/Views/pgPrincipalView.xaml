<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="ProvaPraticaLucas02.Views.pgPrincipalView"
             Title="Tela Principal" WidthRequest="400">
    <ScrollView>
        <StackLayout Margin="0,20,0,0" WidthRequest="350">
            <Label Text="{Binding Nome, StringFormat='Bem Vindo! {0}'}"
                   FontSize="30"
                   HorizontalTextAlignment="Center"/>
                      
            <StackLayout Padding="10"/>
            <Label Text="Email:"/>
            <Label Text="{Binding Email}"/>

            <StackLayout Padding="10"/>
            <Label Text="CPF:"/>
            <Label Text="{Binding Cpf}"/>

            <StackLayout Padding="10"/>
            <Label Text="Data de Nascimento"/>
            <Label Text="{Binding DataNascimento}"/>

            <Button Text="Atualizar"
                    Margin="0,20,0,0"
                    Command="{Binding CommandAtualizarUsuario}"/>

            <Button Text="Visualizar"
                    Margin="0,20,0,0"                  
                    Command="{Binding CommandConsultarUsuario}"/>

            <Button Text="Voltar"
                    Margin="0,20,0,0"
                    Command="{Binding VoltarCommand}"/>

        </StackLayout>
    </ScrollView>
</ContentPage>